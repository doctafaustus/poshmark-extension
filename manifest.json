{
  "manifest_version": 2,

  "name": "Power Poshmark",
  "description": "This extension automates a number of Poshmark actions including sharing, following, and scanning for bundle opportunities.",
  "version": "0.0.0.2",

  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html",
    "default_title": "Open"
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true 
  },

 "content_scripts": [
    {
      "matches": ["https://poshmark.com/*"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": ["scripts/message.js", "scripts/sharer.js", "scripts/follower.js", "scripts/bundler.js", "scripts/init.js"]

}